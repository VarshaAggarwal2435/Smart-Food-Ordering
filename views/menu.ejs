<!DOCTYPE html>
<html lang="en">

<head>
    <title>Menu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="/stylesheets/user.css" rel="stylesheet">
    <link href="/stylesheets/profile.css" rel="stylesheet">
</head>


<body>

    <div>
        <header>
            <!--Navigation Bar-->
            <nav class="navbar navbar-expand-lg p-3 bg-body-tertiary">
                <div class="container-fluid">
                    <img src="/images/logoImage.jpg" class="m-2" width="70" height="70">
                    <span>
                        J.C. Bose University Of Science and Technology,YMCA, Faridabad
                    </span>
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-danger" type="submit">Search</button>
                    </form>
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src = "/images/logoImage.jpg" class = "profilePic">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="/profile">
                                <%=user.email%>
                                    <strong><span class="m-1">(<%=user.balance%>)</span></strong>
                            </a></li>
                            <hr class = "p-1 m-1">
                            <li><a class="dropdown-item" href="/bag">Bag</a></li>
                            <li><a class="dropdown-item" href="/orders">Orders</a></li>
                            <li><a class="dropdown-item" href="#">Help</a></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>



        <section>
            
            <div class="container-fluid bg-trasparent m-4 p-3">
                <a href="/bag"><span>Go to bag</span></a><br>
                <a href="/gift"><span>Go to gift</span></a><br>
                <a href="/availableGifts"><span>Available Gifts</span></a>
                <div style="margin-top: 0px;" class="row m-3 row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 ">
                    <% menu.forEach(function(food){%>
                    <div class="mt-3 col">

                        <div class="card h-100 shadow-sm">
                            <img src="<%= food.image %>" class="card-img-top menuItem" alt="<%= food.name %>">
                            <!-- <img src="/images/logoImage.jpg" class="card-img-top" alt="..."> -->
                            <div class="card-body">
                                <h4 class="card-title"><%=food.name%></h4>
                                <p class="card-text"><%=food.price%></p>
                                <div class="text-center my-4">
                                    <form action="/addToGift/<%=food._id%>" method="POST">

                                        <button type = "submit" class="btn btn-success">
                                            <%= user.gift.some(item => item.name.equals(food._id)) ? "Remove from Gift" : "Add to Gift" %>
                                        </button>
                                    </form>
                                </div>
                                <div class="text-center my-4">
                                    <form action="/addToBag/<%=food._id%>" method="POST">

                                        <button type = "submit" class="btn btn-warning">
                                            <%= user.bag.some(item => item.name.equals(food._id)) ? "Remove from Bag" : "Add to Bag" %>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%})%>
                </div>
            </div>
        </section>


