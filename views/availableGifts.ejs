<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bag</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        main {
            flex: 1;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            max-width: 200px;
            margin: auto;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .card img {
            max-height: 100px;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            object-fit: cover;
        }

        .card-body {
            text-align: center;
            padding: 10px;
        }

        .card-title {
            font-size: 14px;
            font-weight: bold;
        }

        .btn-use {
            background-color: #ff5252;
            color: white;
            font-size: 12px;
            padding: 6px 12px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-use:hover {
            background-color: #ff3333;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <header>
        <!-- Original Header -->
        <nav class="navbar navbar-expand-lg p-3 bg-body-tertiary">
            <div class="container-fluid">
                <img src="/images/logoImage.jpg" class="m-2" width="70" height="70" />
                <span>
                    J.C. Bose University Of Science and Technology, YMCA, Faridabad
                </span>
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px">
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                    <button class="btn btn-outline-danger" type="submit">Search</button>
                </form>
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/images/logoImage.jpg" class="profilePic" height="50" width="50" />
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                        <li>
                            <a class="dropdown-item" href="/profile">
                                <%=user.email%>
                                <strong><span class="m-1">(<%=user.balance%>)</span></strong>
                            </a>
                        </li>
                        <hr class="p-1 m-1" />
                        <li><a class="dropdown-item" href="/bag">Bag</a></li>
                        <li><a class="dropdown-item" href="/orders">Orders</a></li>
                        <li><a class="dropdown-item" href="#">Help</a></li>
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <section>
            <!-- Cards Section -->
            <div class="container mt-4">
                <a href="/menu" class="btn btn-outline-primary mb-3">Go to Menu</a>
                <div class="row g-4">
                    <% let count = 1; %>
                    <% user.availableGifts.forEach(function (gift) { %>
                        <div class="col-6 col-sm-4 col-lg-3" id="gift-card-<%=gift._id%>">
                            <div class="card">
                                <img src="/images/logoImage.jpg" class="card-img-top" alt="Gift Image">
                                <div class="card-body">
                                    <h6 class="card-title">Gift <%=count%></h6>
                                    <p class="text-muted" style="font-size: 12px;">ID: <%=gift._id%></p>
                                    <button class="btn btn-use" onclick="useGift('<%=gift._id%>')">Use</button>
                                </div>
                            </div>
                        </div>
                        <% count++; %>
                    <% }); %>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <div>Â© 2024 J.C. Bose University Of Science and Technology, YMCA</div>
    </footer>

    <script>
        async function useGift(giftId) {
            if (confirm(`Are you sure you want to use Gift ${giftId}?`)) {
                try {
                    const response = await fetch(`/api/useGift/${giftId}`, {
                        method: 'DELETE',
                    });

                    if (response.ok) {
                        const cardElement = document.querySelector(`#gift-card-${giftId}`);
                        cardElement.style.transition = "opacity 0.3s ease, transform 0.3s ease";
                        cardElement.style.opacity = "0";
                        cardElement.style.transform = "scale(0.8)";
                        setTimeout(() => cardElement.remove(), 300);

                        alert(`Gift ${giftId} has been successfully used! ðŸŽ‰`);
                    } else {
                        const error = await response.json();
                        alert(`Error: ${error.message}`);
                    }
                } catch (err) {
                    console.error(err);
                    alert('Something went wrong. Please try again!');
                }
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>
</body>

</html>
