<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bag</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <link href="/stylesheets/profileBag.css" rel="stylesheet" />
</head>

<body>
    <div>
        <header>
            <!--Navigation Bar-->
            <nav class="navbar navbar-expand-lg p-3 bg-body-tertiary">
                <div class="container-fluid">
                    <img src="/images/logoImage.jpg" class="m-2" width="70" height="70" />
                    <span>
                        J.C. Bose University Of Science and Technology,YMCA, Faridabad
                    </span>
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px">
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-outline-danger" type="submit">
                            Search
                        </button>
                    </form>
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/logoImage.jpg" class="profilePic" height="50" width="50" />
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                            <li>
                                <a class="dropdown-item" href="/profile">
                                    <%=user.email%>
                                    <strong><span class="m-1">(<%=user.balance%>)</span></strong>
                                </a>
                            </li>
                            <hr class="p-1 m-1" />
                            <li><a class="dropdown-item" href="/bag">Bag</a></li>
                            <li><a class="dropdown-item" href="/orders">Orders</a></li>
                            <li><a class="dropdown-item" href="#">Help</a></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <section>
            <div class="container-fluid">
                <a href="/menu"><span>Go to menu</span></a>
                <div style="margin-top: 0px;" class="row m-3 row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 ">
                    <% let count = 1 %>
                    <% user.availableGifts.forEach(function(gift){%>
                    <div class="mt-3 col">
                        <div class="card h-100 shadow-sm">
                            <img src="/images/logoImage.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h4 class="card-title"><%=gift._id%></h4>
                                <h4 class="card-title">Gift-<%=count%></h4>
                                <% count=count+1 %>
                            </div>
                        </div>
                    </div>
                    <%})%>
                </div>
            </div>
        </section>

        <!--Horizontal Rule -->
        <hr class="py-4 w-75 mx-auto" />

        <!--Menu Button-->
        <div class="text-center my-5">
            <a href="/sendGift">
                <button type="submit" class="btn btn-danger my-2 my-sm-0 menuBtn">
                    Send Gift
                </button>
            </a>
        </div>

        <!--Footer-->
        <footer class="bg-dark text-center text-white">
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
                Â© 2024 Copyright:
                <a class="text-white" href="https://jcboseust.ac.in/ ">
                    JC Bose University Of Science andTechnology,YMCA
                </a>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js "></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js "
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT "
        crossorigin="anonymous "></script>

    <script src="/scripts/bag.js"></script>
</body>

</html>