<!DOCTYPE html>
<html lang="en">


<head>
    <title>Menu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
   <style>
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .avatar:hover {
            opacity: 0.8;
            cursor: pointer;
        }

        .stat:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }
    </style>
</head>

<body class="bg-light text-dark">
    <!-- Header -->
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary shadow-sm">
            <div class="container-fluid">
                <img src="/images/logoImage.jpg" class="m-2" width="70" height="70">
                <span class="navbar-brand">J.C. Bose University Of Science and Technology, YMCA, Faridabad</span>
                <form class="d-flex me-auto">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-danger" type="submit">Search</button>
                </form>
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/images/logoImage.jpg" class="rounded-circle" height="50" width="50">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="/profile">
                                <%=user.email%>
                                <strong><span class="m-1">(<%=user.balance%>)</span></strong>
                            </a></li>
                        <hr class="dropdown-divider">
                        <li><a class="dropdown-item" href="/bag">Bag</a></li>
                        <li><a class="dropdown-item" href="/orders">Orders</a></li>
                        <li><a class="dropdown-item" href="#">Help</a></li>
                        <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Profile Section -->
    <main class="container mt-4">
        <!-- Profile Card -->
        <div class="card p-4 mb-4 shadow">
            <div class="d-flex align-items-center">
                <div class="position-relative">
                    <img src="/images/<%=user.image%>" alt="Profile Picture" class="rounded-circle border border-secondary" width="100"
                        height="100">
                    <button
                        class="btn btn-sm btn-primary position-absolute bottom-0 end-0 rounded-circle p-1">Edit</button>
                </div>
                <div class="ms-4">
                    <h2 class="fw-bold"><%=user.name%></h2>
                    <p class="text-muted mb-1"><%=user.email%></p>
                    <p class="text-muted"><%=user.phoneNo%></p>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card bg-success text-white text-center p-4 stat shadow">
                    <h3 class="card-title">Total Orders</h3>
                    <p class="card-text fs-4"><%=user.orderHistory.length%></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-primary text-white text-center p-4 stat shadow">
                    <h3 class="card-title">Total Spending</h3>
                    <p class="card-text fs-4">₹<%=user.totalSpend%></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-dark text-center p-4 stat shadow">
                    <h3 class="card-title">Pending</h3>
                    <p class="card-text fs-4">₹<%=user.balance%></p>
                </div>
            </div>
        </div>

        <!-- Profile Update Section -->
        <div class="card p-4 shadow mb-4">
            <h3 class="fw-bold mb-3">Update Profile</h3>
            <form id="profile-form">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" class="form-control" value="<%=user.name%>" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="tel" id="phone" class="form-control" value="<%=user.phone%>" disabled>
                    </div>
                </div>
                <div class="d-flex gap-3">
                    <button type="button" id="edit-button" class="btn btn-primary">Edit</button>
                    <button type="button" id="update-button" class="btn btn-success d-none">Update</button>
                    <button type="button" id="discard-button" class="btn btn-danger d-none">Discard</button>
                </div>
            </form>
        </div>

        <!-- Update Password Section -->
        <div>
            <button type="button" id="update-password-button" class="btn btn-warning">Update Password</button>
            <div id="password-section" class="d-none mt-4">
                <div class="mb-3">
                    <label for="old-password" class="form-label">Old Password</label>
                    <input type="password" id="old-password" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="new-password" class="form-label">New Password</label>
                    <input type="password" id="new-password" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="confirm-password" class="form-label">Confirm New Password</label>
                    <input type="password" id="confirm-password" class="form-control">
                </div>
                <div class="d-flex gap-3">
                    <button type="button" onclick="savePassword()" class="btn btn-success">Save</button>
                    <button type="button" onclick="cancelPasswordUpdate()" class="btn btn-danger">Cancel</button>
                </div>
            </div>
        </div>
    </main>
 <!--Footer-->
 <footer class="bg-dark text-center text-white mt-3">
    <!-- Copyright -->
    <div class="text-center p-3 " style="background-color: rgba(0, 0, 0, 0.2); ">
        © 2024 Copyright:
        <a class="text-white " href="https://jcboseust.ac.in/ ">
            JC Bose University Of Science andTechnology,YMCA
        </a>
    </div>
</footer>

</div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle Edit mode
        document.getElementById("edit-button").addEventListener("click", () => toggleEditMode(true));
        document.getElementById("update-button").addEventListener("click", () => {
            toggleEditMode(false);
            alert("Profile updated successfully!");
        });
        document.getElementById("discard-button").addEventListener("click", () => toggleEditMode(false));

        function toggleEditMode(editMode) {
            const inputs = document.querySelectorAll("#profile-form input");
            inputs.forEach(input => input.disabled = !editMode);
            document.getElementById("edit-button").classList.toggle("d-none", editMode);
            document.getElementById("update-button").classList.toggle("d-none", !editMode);
            document.getElementById("discard-button").classList.toggle("d-none", !editMode);
        }

        document.getElementById("update-password-button").addEventListener("click", () => {
            document.getElementById("password-section").classList.toggle("d-none");
        });

        function savePassword() {
            alert("Password updated successfully!");
            document.getElementById("password-section").classList.add("d-none");
        }

        function cancelPasswordUpdate() {
            document.getElementById("password-section").classList.add("d-none");
        }
    </script>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js "></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js "
integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT "
crossorigin="anonymous "></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>